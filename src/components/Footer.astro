---
import EmailIcon from "../assets/icons/EmailIcon.astro";
import FeedIcon from "../assets/icons/FeedIcon.astro";
import GithubIcon from "../assets/icons/GithubIcon.astro";
import MediumIcon from "../assets/icons/MediumIcon.astro";

const today = new Date();
---

<footer class="footer">
  <div class="social-links">
    <a href="mailto:juniorfelix8825@outlook.com" target="_blank" class="link">
      <EmailIcon />
    </a>
    <a href="https://github.com/JrFelix540" target="_blank" class="link">
      <GithubIcon />
    </a>
    <a href="https://juniorfelix.com/rss.xml" target="_blank" class="link">
      <FeedIcon />
    </a>
    <a href="https://medium.com/@junior-felix" target="_blank" class="link">
      <MediumIcon />
    </a>
  </div>
  <p class="copy">&copy; {today.getFullYear()} Junior Felix.</p>
</footer>
<style>
  .footer {
    padding: 25px;
    text-align: center;
  }
  .social-links {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    padding: 0 25px;
  }
  .copy {
    color: #fff;
  }
  :global(.light) .copy {
    color: #000;
  }
  .icon {
    height: 24px;
    width: 24px;
  }
</style>
