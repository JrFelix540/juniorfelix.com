---
import { getReadingTime } from "../utils/getReadingTime";

export interface Props {
  title: string;
  heroImage?: string;
  slug: string;
  pubDate: Date;
  body: string;
  externalLink?: string;
  readingTime?: number;
}
const { title, heroImage, pubDate, slug, body, externalLink, readingTime } =
  Astro.props;
const backgroundImage = `url(${heroImage})`;
const url = externalLink ? externalLink : `/blog/${slug}`;
const date = new Date(pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const approximateReadingTime = readingTime || getReadingTime(body);
const isExternal = !!externalLink;
---

<a class="link" href={url} target={isExternal ? "_blank" : "_self"}>
  <div class="card">
    <div class="image">
      <img src={heroImage} alt="preview image" />
    </div>
    <div class="content">
      <h3 class="title">{title}</h3>
      <p class="description">
        {date}
        <span class="dot">â€¢</span>{approximateReadingTime} minutes to read
      </p>
    </div>
  </div>
</a>

<style define:vars={{ backgroundImage }}>
  .link:hover {
    text-decoration: none;
  }
  .card {
    display: grid;
    border-radius: 8px;
    background-color: #1f1f1f;
    border: 1px solid #2c2c2c;
  }
  .image {
    height: 200px;
    width: 100%;
  }
  .image img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .content {
    padding: 10px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    min-height: 140px;
  }
  .title {
    font-size: 20px;
    color: #fff;
    font-weight: 700;
    text-decoration: none;
  }
  .description {
    font-size: 14px;
    color: rgb(153, 153, 153);
  }
  .dot {
    margin: 0 4px;
  }
  :global(.light) .card {
    background-color: #f9f9f9;
    border-color: #ddd;
  }

  :global(.light) .title {
    color: #252525;
  }
</style>
