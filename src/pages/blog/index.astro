---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import FeaturedBlogPost from "../../components/FeaturedBlogPost.astro";
import BlogPreview from "../../components/BlogPreview.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
const featuredPost = posts.find((post) => post.data.featured === true);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
      }
      ul li :global(time) {
        flex: 0 0 130px;
        font-style: italic;
        color: #595959;
      }
      ul li a:visited {
        color: #8e32dc;
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="container">
      <section>
        {
          featuredPost && (
            <FeaturedBlogPost
              title={featuredPost.data.title}
              slug={featuredPost.slug}
              body={featuredPost.body}
              pubDate={featuredPost.data.pubDate}
              summary={featuredPost.data.summary || ""}
              heroImage={featuredPost.data.heroImage}
            />
          )
        }
      </section>
      <section>
        <ul class="blog-previews">
          {
            posts
              .filter((post) => post.data.featured !== true)
              .map((post) => (
                <BlogPreview
                  title={post.data.title}
                  slug={post.slug}
                  pubDate={post.data.pubDate}
                  body={post.body}
                  heroImage={post.data.heroImage}
                />
              ))
          }
        </ul>
      </section>
    </main>
    <Footer />
    <style>
      .container {
        display: flex;
        flex-direction: column;
        gap: 30px;
        padding: 30px 0;
      }
      .blog-previews {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
      }
      @media (max-width: 769px) {
        .blog-previews {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </body>
</html>
